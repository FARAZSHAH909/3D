{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Game (Release)",
            "type": "shell",
            "command": "msbuild",
            "args": [
                "Pipeline.sln",
                "/p:Configuration=Release",
                "/p:Platform=x64"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build Game (Debug)",
            "type": "shell",
            "command": "msbuild",
            "args": [
                "Pipeline.sln",
                "/p:Configuration=Debug",
                "/p:Platform=x64"
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        }
    ]
}